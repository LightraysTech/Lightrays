{
  "name": "lightrays",
  "version": "1.2.0",
  "description": "A modern and lightweight web design framework, with Sass support.",
  "keywords": [
    "css",
    "library",
    "styles",
    "sass"
  ],
  "files": [
    "style/*",
    "vue_components/*"
  ],
  "main": "style/Lightrays.css",
  "scripts": {
    "start": "sass --style=compressed .\\style\\Lightrays.scss:.\\style\\Lightrays.css -w",
    "dev": "npm run dev --prefix ./lightrays_examples",
    "build": "npm run build-sass & npm run build-docs",
    "build-sass": "sass --style=compressed .\\style\\Lightrays.scss:.\\style\\Lightrays.css",
    "build-docs": "npm run build --prefix ./lightrays_examples",
    "preview-docs": "npm run preview --prefix ./lightrays_examples"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "sass": "^1.83.4"
  }
}
